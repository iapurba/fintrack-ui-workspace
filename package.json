{
  "name": "fintrack-ui-workspace",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm -r parallel dev",
    "dev:container": "pnpm --filter core-shell dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:coverage": "pnpm -r test -- --coverage",
    "lint": "pnpm --r lint",
    "typecheck": "pnpm -r typecheck",
    "prepare": "husky",
    "clean:all": "pnpm recursive --filter '*' exec rm -rf node_modules && rm -rf node_modules"
  },
  "devDependencies": {
    "@fintrack/eslint-config": "workspace:*",
    "@fintrack/prettier-config": "workspace:*",
    "@types/node": "^20.14.2",
    "eslint": "^9.36.0",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2",
    "webpack-merge": "^6.0.1"
  },
  "pnpm": {
    "overrides": {
      "typescript": "^5.9.2"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,md,html,css,yml}": "prettier --write --ignore-unknown",
    "**/*.{ts,tsx,js,jsx}": "eslint --fix"
  },
  "prettier": "@fintrack/prettier-config"
}
